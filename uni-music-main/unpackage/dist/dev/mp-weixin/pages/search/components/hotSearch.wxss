.hotSearch-container {
  width: 100%;
  position: relative;
  margin-top: 20rpx;
}
.hotSearch-container .hotList {
  margin-top: 15rpx;
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.hotSearch-container .hotList .hot-item {
  width: 50%;
  margin-bottom: 30rpx;
  display: inline-block;
}
.hotSearch-container .hotList .hot-item.topThree .index {
  color: #ff9700;
}
.hotSearch-container .hotList .hot-item.topThree .word {
  font-family: 'Microsoft Yahei', Arial, Helvetica, sans-serif;
  font-weight: 600;
  color: #303030;
}
.hotSearch-container .hotList .hot-item .index {
  width: 44rpx;
  display: inline-block;
}
.hotSearch-container .hotList .hot-item .searchLabel {
  max-width: calc(100% - 125rpx);
  display: inline-block;
  white-space: nowrap;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hotSearch-container .hotList .hot-item .iconImg {
  margin-left: 15rpx;
  vertical-align: middle;
}
.hotSearch-container .hotList .hot-item .iconImg.topImg {
  width: 30rpx;
  height: 32rpx;
  vertical-align: text-bottom;
}
.hotSearch-container .hotList .hot-item .iconImg.hotImg {
  width: 60rpx;
  height: 30rpx;
}

